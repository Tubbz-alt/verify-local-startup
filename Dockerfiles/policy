FROM govukverify/java8

RUN wget https://packages.ida.digital.cabinet-office.gov.uk/hub-release_14887/pool/main/p/policy/policy_15465_amd64.deb

RUN dpkg -i policy_15465_amd64.deb

COPY configuration/hub/policy.yml /ida/policy/policy.yml

WORKDIR /ida/policy

CMD java -jar policy.jar server policy.yml 
