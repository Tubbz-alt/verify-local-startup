FROM govukverify/java8

RUN apt-get install -y unzip

COPY stub-event-sink.zip stub-event-sink.zip

RUN unzip stub-event-sink.zip

COPY configuration/hub/stub-event-sink.yml stub-event-sink-0.1.unspecified/event-sink.yml

WORKDIR stub-event-sink-0.1.unspecified

CMD bin/stub-event-sink server event-sink.yml 
