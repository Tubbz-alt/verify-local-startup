FROM govukverify/java8

RUN wget https://packages.ida.digital.cabinet-office.gov.uk/hub-release_14887/pool/main/c/config/config_15465_amd64.deb

RUN dpkg -i config_15465_amd64.deb

COPY configuration/hub/config.yml /ida/config/config.yml

WORKDIR /ida/config

CMD java -jar config.jar server config.yml 
