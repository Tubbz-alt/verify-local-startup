FROM govukverify/java8

RUN wget https://packages.ida.digital.cabinet-office.gov.uk/hub-release_14887/pool/main/s/saml-proxy/saml-proxy_15465_amd64.deb

RUN dpkg -i saml-proxy_15465_amd64.deb

COPY configuration/hub/saml-proxy.yml /ida/saml-proxy/saml-proxy.yml

WORKDIR /ida/saml-proxy

CMD java -jar saml-proxy.jar server saml-proxy.yml 
